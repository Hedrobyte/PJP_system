<header>
        <div class="cabeçalho">
            <img src="./image/logo-binary-code.png" alt="logo-nav">
            <nav>
                <input type="text" name="search" placeholder="Pesquisar..">
            </nav>
            <div class="cabeçalho-perfil">
                <div><img class="cabeçalho-perfil-imagem" src="./image/perfil-de-usuario.png" alt="figura de perfil">
                </div>
                <div class="cabeçalho-perfil-conta">Conta</div>
            </div>
        </div>
    </header>
    <main>
        <section class="sectionPrincipal">
            <form action="http://localhost:8080/compra" method="post">
                <legend><b>Comprar Produto</b></legend>
                <br>
                <div>
                    <label for="produto">Produto</label>
                    <input type="text" name="nome" id="nomeProduto" class="inputUser" value="{{retorno.nome}}" disabled>
                </div>
                 <div>
                    <label for="preco">Preço</label>
                    <input type="number" name="preco" value="{{retorno.preco}}" disabled>
                </div>
                <div>
                    <input type="hidden" name="id" value="{{retorno.id}}">
                </div>
                <div>
                    <label for="quantidade">Quantidade</label>
                    <input type="number" name="quantidade" id="quantidadeProduto" class="inputUser"  step="1" min="1" required>

                </div>
                <div>
                    <label for="rua">Rua</label>
                    <input type="text" name="rua" id="nomeRua" class="inputUser" minlength="3" maxlength="50" required>
                </div>
                <div>
                    <label for="numero">Número</label>
                    <input type="number" name="numero" step="1" min="1" required>
                </div>
                 {{#if error_login}}
                    <div class="alert alert-danger">{{error_login}}</div>
                {{/if}}
                <div class="botoes">
                    <button class="form-button" type="submit">Comprar</button>
                   
                </div>
            </form>
             <img class="sectionImg" src="./image/desingConfig.jpg" alt="imgDesign">
        </section>
        <main id="main-listaProduto">
            <a href="http://localhost:8080/usuario/principal">
                <button class="button-list">Voltar</button>
            </a>
        </main>
    </main>