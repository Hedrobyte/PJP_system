
<header>
        <div class="cabeçalho">
            <img src="./image/logo-binary-code.png" alt="logo-nav">
            <a href="http://localhost:8080/usuario/lista-compra">
            <button class="btn-listar">LISTAR</button>
            </a>
            <a href="http://localhost:8080/usuario/informacao-conta">
            <div class="cabeçalho-perfil">
                <div><img class="cabeçalho-perfil-imagem" src="./image/perfil-de-usuario.png" alt="figura de perfil">
                </div>
                <div class="cabeçalho-perfil-conta">Conta</div>
            </div>
            </a>
        </div>
</header>
{{#if error_login}}
    <div class="alert alert-danger">{{error_login}}</div>
{{/if}}
{{#if success_login}}
    <div class="alert alert-success">{{success_login}}</div>
{{/if}}
<div class="container-fluid flex border border-dark p-3 my-3 mt-3" >
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Preço</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each retorno}}
            <tr>
                <th>{{nome}}</th>
                <th>{{categoria}}</th>
                <th>R${{preco}}</th>
                <th><a href="http://localhost:8080/compra/{{id}}">
                    <button class="btn btn-dark">comprar</button>
                </a>
                </th>
            </tr>
            {{/each}}
        </tbody>
    </table>
   
</div>